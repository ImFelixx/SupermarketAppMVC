<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Change Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #eef1f5;
        }
        .pw-card {
            margin-top: 60px;
            padding: 30px;
            border-radius: 15px;
            background: white;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        }
        .password-wrapper {
            position: relative;
        }
        .password-wrapper input {
            padding-right: 40px;
        }
        .toggle-icon {
            position: absolute;
            right: 12px;
            top: 70%;
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
</head>

<body>

<%- include("partials/header") %>

<div class="container col-md-5">
    <div class="pw-card">

        <h2 class="text-center mb-4">üîí Change Password</h2>

        <% if (errors && errors.length) { %>
            <div class="alert alert-danger">
                <% errors.forEach(e => { %>
                    <p><%= e %></p>
                <% }) %>
            </div>
        <% } %>

        <% if (messages && messages.length) { %>
            <div class="alert alert-success">
                <% messages.forEach(m => { %>
                    <p><%= m %></p>
                <% }) %>
            </div>
        <% } %>

        <form action="/change-password" method="POST">

            <div class="mb-3 password-wrapper">
                <label class="form-label">Old Password</label>
                <input type="password" name="old_password" class="form-control" required id="oldpw">
                <span class="toggle-icon" onclick="togglePw('oldpw')">üëÅ</span>
            </div>

            <div class="mb-3 password-wrapper">
                <label class="form-label">New Password</label>
                <input type="password" name="new_password" class="form-control" required minlength="6" id="newpw">
                <span class="toggle-icon" onclick="togglePw('newpw')">üëÅ</span>
            </div>

            <div class="mb-3 password-wrapper">
                <label class="form-label">Confirm New Password</label>
                <input type="password" name="confirm_password" class="form-control" required minlength="6" id="confirmpw">
                <span class="toggle-icon" onclick="togglePw('confirmpw')">üëÅ</span>
            </div>

            <button class="btn btn-primary w-100 mt-3">Update Password</button>

            <div class="mt-3">
                <a href="/profile" class="btn btn-secondary w-100">Back to Profile</a>
            </div>
        </form>

    </div>
</div>

<script>
function togglePw(id) {
    const field = document.getElementById(id);
    field.type = (field.type === "password") ? "text" : "password";
}
</script>

<%- include("partials/footer") %>

</body>
</html>
