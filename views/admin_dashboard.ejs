<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body { background: #f4f6f9; }
        .page-title { font-weight: 700; font-size: 32px; }

        .dash-card {
            border-radius: 16px;
            padding: 25px;
            color: white;
        }

        .bg-gradient-1 { background: linear-gradient(45deg, #4e73df, #224abe); }
        .bg-gradient-2 { background: linear-gradient(45deg, #1cc88a, #13855c); }
        .bg-gradient-3 { background: linear-gradient(45deg, #f6c23e, #dda20a); }
        .bg-gradient-4 { background: linear-gradient(45deg, #e74a3b, #be2617); }

        .chart-card {
            height: 360px;       /* fixed consistent height */
            display: flex;
            flex-direction: column;
        }

        .chart-card canvas {
            flex: 1;             /* makes canvas fill equal remaining space */
            max-height: 280px;   /* makes both charts same height */
        }

    </style>
</head>

<body>

<%- include("partials/header") %>

<div class="container mt-4">

    <h2 class="page-title mb-4">üìä Admin Dashboard</h2>

    <!-- TOP STATS -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="dash-card bg-gradient-1 shadow">
                <h4>Total Products</h4>
                <h2 class="fw-bold"><%= totalProducts %></h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dash-card bg-gradient-2 shadow">
                <h4>Total Orders</h4>
                <h2 class="fw-bold"><%= totalOrders %></h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dash-card bg-gradient-3 shadow">
                <h4>Total Revenue</h4>
                <h2 class="fw-bold">$<%= Number(totalRevenue).toFixed(2) %></h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dash-card bg-gradient-4 shadow">
                <h4>Total Users</h4>
                <h2 class="fw-bold"><%= totalUsers %></h2>
            </div>
        </div>
    </div>


    <!-- LOW STOCK ALERT -->
    <div class="card p-4 mt-4 shadow">
        <h5 class="fw-bold text-danger">‚ö†Ô∏è Low-Stock Alerts</h5>

        <% if (lowStock.length === 0) { %>
            <p class="text-success mt-3">All products are sufficiently stocked!</p>
        <% } else { %>
        <table class="table table-hover text-center mt-3">
            <thead class="table-danger">
                <tr>
                    <th>Product</th>
                    <th>Qty Left</th>
                </tr>
            </thead>
            <tbody>
                <% lowStock.forEach(p => { %>
                <tr>
                    <td><%= p.productName %></td>
                    <td><span class="badge bg-danger"><%= p.quantity %></span></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>
    </div>

    <!-- CHARTS -->
    <div class="row mt-5 g-4">

        <div class="col-md-8">
            <div class="card p-4 shadow chart-card">
                <h5 class="fw-bold mb-3">üì¶ Monthly Sales Overview</h5>
                <canvas id="salesChart"></canvas>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4 shadow chart-card">
                <h5 class="fw-bold mb-3">üë§ User Breakdown</h5>
                <canvas id="userChart"></canvas>
            </div>
        </div>

    </div>

    <!-- RECENT ORDERS -->
    <div class="card p-4 mt-5 shadow">
        <h5 class="fw-bold mb-3">üìù Recent Orders</h5>

        <table class="table table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Total</th>
                    <th>Date</th>
                </tr>
            </thead>

            <tbody>
                <% recentOrders.forEach(o => { %>
                <tr>
                    <td>#<%= o.id %></td>
                    <td><%= o.username %></td>
                    <td>$<%= Number(o.total).toFixed(2) %></td>
                    <td><%= new Date(o.created_at).toLocaleString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</div>

<%- include("partials/footer") %>

<!-- ---------- CHART.JS LOGIC ---------- -->
<script>
    // MONTHLY SALES
    const salesLabels = <%- JSON.stringify(monthlySales.map(m => m.month)) %>;
    const salesData = <%- JSON.stringify(monthlySales.map(m => Number(m.revenue))) %>;

    new Chart(document.getElementById('salesChart'), {
        type: 'bar',
        data: {
            labels: salesLabels,
            datasets: [{
                label: "Revenue ($)",
                data: salesData,
                backgroundColor: "rgba(78, 115, 223, 0.8)"
            }]
        }
    });

    // USER BREAKDOWN PIE CHART
    const userLabels = <%- JSON.stringify(usersBreakdown.map(r => r.role)) %>;
    const userData = <%- JSON.stringify(usersBreakdown.map(r => r.count)) %>;

    new Chart(document.getElementById('userChart'), {
        type: 'pie',
        data: {
            labels: userLabels,
            datasets: [{
                data: userData,
                backgroundColor: ["#4e73df", "#1cc88a", "#f6c23e"]
            }]
        }
    });
</script>

</body>
</html>
