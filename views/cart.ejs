<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .qty-box {
      width: 70px;
      text-align: center;
    }
    .delete-btn {
      cursor: pointer;
      color: red;
      font-size: 20px;
      transition: 0.2s;
    }
    .delete-btn:hover {
      color: darkred;
      transform: scale(1.2);
    }
  </style>
</head>

<body>

  <!-- Include Header -->
  <%- include("partials/header") %>

  <div class="container mt-5">

    <h2 class="text-center mb-4">üõí Your Shopping Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <div class="alert alert-warning text-center">Your cart is empty.</div>

      <div class="text-center">
        <a href="/shopping" class="btn btn-success">Start Shopping</a>
      </div>

    <% } else { %>

      <table class="table table-striped text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Subtotal</th>
            <th>Remove</th>
          </tr>
        </thead>

        <tbody>
          <% let total = 0; %>

          <% cart.forEach((item) => { %>
            <tr>
              <td><%= item.productName %></td>

              <td>
                <img src="/images/<%= item.image %>" width="80" class="img-thumbnail">
              </td>

              <!-- Editable Quantity -->
              <td>
                <form action="/update-cart/<%= item.id %>" method="POST" class="d-flex justify-content-center">
                  <input 
                    type="number"
                    name="quantity"
                    min="1"
                    max="<%= item.stock || item.quantity || 1 %>"
                    value="<%= item.quantity %>"
                    class="form-control qty-box"
                    oninput="validateQty(this, <%= item.stock || item.quantity || 1 %>)">

                  <button class="btn btn-sm btn-outline-primary ms-2">Update</button>
                </form>
              </td>

              <td>$<%= item.price.toFixed(2) %></td>

              <td>$<%= (item.price * item.quantity).toFixed(2) %></td>

              <td>
                <form action="/remove-from-cart/<%= item.id %>" method="POST" onsubmit="return confirm('Remove this item?')">
                  <button class="btn btn-danger btn-sm">‚úñ</button>
                </form>
              </td>
            </tr>

            <% total += item.price * item.quantity; %>
          <% }) %>
        </tbody>
      </table>

      <h4 class="mt-3 text-end">
        Total: <strong>$<%= total.toFixed(2) %></strong>
      </h4>

      <div class="d-flex justify-content-between mt-4">
        <a href="/shopping" class="btn btn-secondary">‚Üê Continue Shopping</a>

      <a href="/checkout" class="btn btn-primary">‚úî Checkout</a>

      </div>

    <% } %>

  </div>

  <%- include("partials/footer") %>

  <script>
    function validateQty(input, maxStock) {
      let value = parseInt(input.value);

      if (isNaN(value) || value < 1) value = 1;
      if (value > maxStock) value = maxStock;

      input.value = value;
    }
  </script>

</body>
</html>
