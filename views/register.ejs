<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Register | Supermarket App</title>

    <style>
        body {
            background: url("https://images.unsplash.com/photo-1585325701954-c98977b09f9b") no-repeat center center fixed;
            background-size: cover;
        }
        .card {
            margin-top: 60px;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        .password-wrapper {
            position: relative;
        }

        .password-wrapper input {
            padding-right: 40px;   /* space for the icon inside the field */
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 70%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #000;           /* black icon */
            font-size: 1.1rem;
        }
    </style>
</head>

<body>

    <!-- Header Partial -->
    <%- include("partials/header") %>

    <div class="container d-flex justify-content-center">
        <div class="card col-md-6 bg-light">

            <h2 class="text-center mb-4">Create Your Account</h2>

            <!-- Error Messages -->
            <% if (messages && messages.length > 0) { %>
                <div class="alert alert-danger">
                    <% messages.forEach(function(message) { %>
                        <p><%= message %></p>
                    <% }); %>
                </div>
            <% } %>

            <form action="/register" method="POST">

                <!-- Username -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" class="form-control" required
                    value="<%= formData && formData.username ? formData.username : '' %>">
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required
                    value="<%= formData && formData.email ? formData.email : '' %>">
                </div>

                <!-- Password with Eye Icon -->
                <div class="mb-3 password-wrapper">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                    <span class="toggle-password" onclick="togglePassword()">üëÅ</span>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" id="address" name="address" class="form-control" required
                    value="<%= formData && formData.address ? formData.address : '' %>">
                </div>

                <!-- Contact Number -->
                <div class="mb-3">
                    <label for="contact" class="form-label">Contact Number:</label>
                    <input type="text" id="contact" name="contact" class="form-control" required
                    value="<%= formData && formData.contact ? formData.contact : '' %>">
                </div>

                <!-- Hidden Role (always user) -->
                <input type="hidden" name="role" value="user">

                <!-- Submit -->
                <button type="submit" class="btn btn-success w-100 mt-3">Register</button>

                <p class="mt-3 text-center">
                    Already have an account?
                    <a href="/login" class="text-primary">Login here</a>
                </p>
            </form>

        </div>
    </div>

    <!-- Footer Partial -->
    <%- include("partials/footer") %>

    <!-- Password Toggle Script -->
    <script>
        function togglePassword() {
            const pw = document.getElementById("password");
            pw.type = pw.type === "password" ? "text" : "password";
        }
    </script>

</body>
</html>